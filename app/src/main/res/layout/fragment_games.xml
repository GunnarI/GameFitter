<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/games_fragment_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/join_game_float_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:fabSize="mini"
        android:scaleType="center"
        app:srcCompat="@mipmap/ic_join_game"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/small_button_margin"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_game_float_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:fabSize="mini"
        android:scaleType="center"
        app:srcCompat="@mipmap/ic_create_game"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/small_button_margin"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_game_float_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:fabSize="normal"
        android:scaleType="center"
        app:srcCompat="@mipmap/ic_plus"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/large_button_margin"/>

</FrameLayout>