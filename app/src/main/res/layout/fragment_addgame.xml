<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/add_game_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:text="@string/welcome_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_game_button"
        android:layout_width="@dimen/large_button_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/upper_button_margin"
        android:text="@string/create_game_button"
        app:layout_constraintEnd_toStartOf="@+id/welcome_message"
        app:layout_constraintStart_toEndOf="@+id/welcome_message"
        app:layout_constraintTop_toBottomOf="@+id/welcome_message" />

    <Button
        android:id="@+id/join_game_button"
        android:layout_width="@dimen/large_button_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_separation"
        android:text="@string/join_game_button"
        app:layout_constraintEnd_toStartOf="@+id/create_game_button"
        app:layout_constraintStart_toEndOf="@+id/create_game_button"
        app:layout_constraintTop_toBottomOf="@+id/create_game_button" />
</android.support.constraint.ConstraintLayout>